<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <title>Hood Guide</title>
  <link rel="stylesheet" href="">
  <script src="/bower_components/jquery/dist/jquery.min.js" type="text/javascript"></script>
</head>
<body>

<div class="news">
  <h1>RECENT NEWS</h1>
  <% if( articleDocs.length ) { %>
   <% articleDocs.forEach(function( article ){  %>
   <section>
      <h1><%= article.headline.main %></h1>
      <% if(article.multimedia[0]) { %>
      <img src="http://www.nytimes.com/<%= article.multimedia[0].url %>" alt="">
      <% } %>
      <p><%= article.lead_paragraph %></p>
      <a href="<%= article.web_url %>" target="_blank">Read full article...</a>
   </section>
   <% }) %>
  <% }else{ %>
   <li>No Results found</li>
  <% } %>
</div><!-- .news -->

</body>
</html>
